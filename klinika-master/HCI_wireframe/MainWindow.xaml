<Window x:Class="HCI_wireframe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       
        xmlns:local="clr-namespace:HCI_wireframe"
       
        mc:Ignorable="d"
        Title="Health Clinic" 
        
      
        ResizeMode="CanResize"
        
        HorizontalAlignment ="Stretch"
        VerticalAlignment="Stretch"
        WindowStartupLocation="CenterScreen"
        Background="DarkGray"
        >
  
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Button Content="Patient" Click="Patient_Click" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="108" Height="45"/>
        <Button Content="Manager" Click="Manager_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Width="108" Height="45"/>
        <Button Content="Doctor" Click="Doctor_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Width="108" Height="45" RenderTransformOrigin="0.214,0.809"/>
        <Button Content="Secretray" Click="Secretary_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Width="108" Height="45" RenderTransformOrigin="0.158,0.426" Margin="0,230,0,230.6"/>

    </StackPanel>


</Window>
